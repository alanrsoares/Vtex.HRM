<!DOCTYPE html>
<html lang="en" ng-app="hrm">
<head>
    <meta charset="utf-8">
    <title>VTEX-HRM - {{pageTitle}}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="author" content="https://github.com/alanrsoares">

    <!-- Le style bundles -->
    @Styles.Render("~/bundles/css/all")
    @Styles.Render("~/Content/font-awesome.css")

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <!-- Le fav and touch icons -->
    <link rel="shortcut icon" href="~/favicon.ico">
</head>

<body>

    <div class="navbar navbar-fixed-top" bs-navbar>
        <div class="navbar-inner">
            <div class="container-fluid">
                <a id="menuToggler" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <a class="brand" href="#" style="padding-left: 60px">
                    VTEX-HRM
                </a>
                <div id="collapser" class="nav-collapse">
                    <ul class="nav">
                        <li data-match-route="/resources"><a href="#/resources">Resources</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        @RenderBody()
    </div>

    <!-- Le javascript bundles -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script type="text/javascript">
        var files = ["@Scripts.Url("~/bundles/js/third-party-scripts")",
                     "@Scripts.Url("~/bundles/js/app")"];

        // Add a script element as a child of the body
        var downloadJSAtOnload = function (files) {
            var index;
            for (index = 0; index < files.length; ++index) {
                var src = files[index];
                var element = document.createElement("script");
                element.src = src;
                document.body.appendChild(element);
            }
        };

        var downloadJs = function() {
            downloadJSAtOnload(files);
        };

        // Check for browser support of event handling capability
        if (window.addEventListener)
            window.addEventListener("load", downloadJs, false);
        else if (window.attachEvent)
            window.attachEvent("onload", downloadJs);
        else window.onload = downloadJs;

    </script>
</body>
</html>
